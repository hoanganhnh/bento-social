# ===========================================
# BENTO SOCIAL MICROSERVICES - Environment Variables
# Copy this file to .env and modify as needed
# ===========================================

# Environment
NODE_ENV=development

# ===========================================
# DATABASE (Multiple databases for microservices isolation)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=bento
DB_PASSWORD=bento_secret

# Individual service databases (created automatically by init script)
# - auth_db: Authentication service
# - user_db: User profile and followers
# - post_db: Posts
# - topic_db: Topics/Categories
# - comment_db: Comments
# - notification_db: Notifications
# - interaction_db: Likes, Saves, Follows

# ===========================================
# REDIS (Caching & Session Store)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=bento_redis
REDIS_URL=redis://:bento_redis@localhost:6379/0

# ===========================================
# RABBITMQ (Event Bus for reliable messaging)
# ===========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=bento
RABBITMQ_PASSWORD=bento_rabbit
RABBITMQ_URL=amqp://bento:bento_rabbit@localhost:5672

# ===========================================
# JWT
# ===========================================
JWT_SECRET=bento_jwt_secret_key_change_in_production

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_URL=http://localhost:3001

# ===========================================
# CDN / UPLOADS
# ===========================================
CDN_URL=http://localhost:3007/uploads

# ===========================================
# SERVICE URLs (for local development)
# ===========================================
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
POST_SERVICE_URL=http://localhost:3003
TOPIC_SERVICE_URL=http://localhost:3004
COMMENT_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006
UPLOAD_SERVICE_URL=http://localhost:3007
INTERACTION_SERVICE_URL=http://localhost:3008

